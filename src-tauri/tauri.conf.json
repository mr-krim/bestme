{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/v1/core/tauri-config-schema/schema.json",
  "build": {
    "distDir": "../ui/dist",
    "devPath": "http://localhost:3000",
    "beforeDevCommand": "cd .. && npm run dev",
    "beforeBuildCommand": "cd .. && npm run build"
  },
  "package": {
    "productName": "BestMe",
    "version": "0.1.0"
  },
  "tauri": {
    "bundle": {
      "identifier": "com.bestme.app",
      "active": false
    },
    "windows": [
      {
        "title": "BestMe",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "allowlist": {
      "all": true
    }
  }
} 
